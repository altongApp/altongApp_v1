<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="0dp">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F0F8F5"
        android:padding="20dp">

        <!-- 진단명 -->
        <TextView
            android:id="@+id/tv_diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중심장액성망막병변증"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- 처방 정보 -->
        <TextView
            android:id="@+id/tv_prescription_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="14일분 · 4개 약품"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <!-- 처방일 -->
        <TextView
            android:id="@+id/tv_prescription_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="처방일: 2024.12.01"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- 약 리스트 (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_drugs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:padding="16dp"
        android:scrollbars="vertical" />

    <!-- 하단 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="end">

        <!-- 모두 체크 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check_all"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="모두 체크"
            android:textSize="14sp"
            android:textColor="@color/primary_green_dark"
            app:strokeColor="@color/primary_green_dark"
            app:strokeWidth="1dp"
            app:backgroundTint="@color/white"
            app:cornerRadius="8dp"
            android:layout_marginEnd="8dp" />

        <!-- 닫기 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="닫기"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_green_dark"
            app:cornerRadius="8dp" />
    </LinearLayout>

</LinearLayout>